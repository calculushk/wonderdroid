<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="uk.org.cardboardbox.wonderdroid" android:versionCode="27" android:versionName="1.7e">

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application android:name=".WonderDroid" android:icon="@drawable/icon"
		android:label="@string/app_name">

		<activity android:name=".Select" android:label="@string/app_name"
			android:configChanges="orientation|screenLayout|keyboardHidden"
			android:screenOrientation="landscape"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".Main"
			android:theme="@style/Theme.NoBackground"
			android:label="@string/app_name" android:screenOrientation="landscape"
			android:configChanges="orientation|screenLayout|keyboardHidden"
			android:excludeFromRecents="true" android:exported="false">
		</activity>
		<activity android:name=".Prefs" android:label="@string/app_name"
			android:screenOrientation="portrait">
		</activity>

	</application>

	<uses-sdk android:minSdkVersion="4" />
</manifest> 